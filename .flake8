[flake8]
# Set the maximum line length to 100 characters
max-line-length = 100

# Ignore specific error codes (E501 is max line length error, E203 is a whitespace error)
extend-ignore = E203, E501, W293

# Set the maximum complexity allowed for functions
max-complexity = 10

# Exclude specific directories or files
exclude = .venv, .git, __pycache__, docs
